<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
          <label>Title</label>
          <input type="text" value=<%= blog.title %> placeholder="Title" name="blog[title]" autocomplete="off">
      </div>
      <div class="field">
          <label>Image URL</label>
          <input type="text" value=<%= blog.image %> name="blog[image]" placeholder="Image URL" autocomplete="off">
      </div>
      <div class="field">
          <label>Blog Content</label>
          <textarea name="blog[body]" required><%= blog.body %></textarea>
      </div>
    <button class="ui big basic green button">Update</button>
  </form>
</div>

<% include partials/footer %>